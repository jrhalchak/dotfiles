# Dunst configuration managed in dotfiles
# Theme aligned with polybar/picom colors
# Install: sudo apt install dunst
# This file will be symlinked to ~/.config/dunst/dunstrc by installs.sh

[global]
    monitor = 0
    follow = mouse
    # top-right origin, offset accounts for bar height + gap
    origin = top-right
    offset = 16x56
    # width x max_notifications
    # geometry removed in newer dunst versions; use width + notification_limit
    width = 320
    notification_limit = 10
    indicate_hidden = yes
    shrink = no
    separator_height = 2
    padding = 12
    horizontal_padding = 16
    frame_width = 4
    frame_color = "#7aa2f7"
    corner_radius = 10
    transparency = 0
    # Fonts
    font = VictorMono Nerd Font 10
    line_height = 0
    markup = full
    format = "%s\n%b"
    alignment = left
    vertical_alignment = top
    show_indicators = yes
    word_wrap = yes
    ignore_newline = no
    stack_duplicates = true
    hide_duplicate_count = false
    show_age_threshold = 60
    ellipsize = middle
    separator_color = auto
    sort = yes
    idle_threshold = 120
    # Mouse actions
    mouse_left_click = do_action, close_current
    mouse_middle_click = close_all
    mouse_right_click = close_current

[urgency_low]
    background = "#1a1b26"
    foreground = "#c0caf5"
    frame_color = "#1a1b26"
    timeout = 5

[urgency_normal]
    background = "#1a1b26"
    foreground = "#c0caf5"
    frame_color = "#7aa2f7"
    timeout = 7

[urgency_critical]
    background = "#1a1b26"
    foreground = "#f7768e"
    frame_color = "#f7768e"
    timeout = 0
    # Optionally highlight with a script or sound

# Experimental rules examples (commented)
